<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.chenylnti.logindemo.mapper.MenuMapper">
    <resultMap id="BaseResultMap" type="io.chenylnti.logindemo.pojo.Menu">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="pattern" property="pattern" jdbcType="VARCHAR"/>
    </resultMap>
    <resultMap id="MenuWithRole" type="io.chenylnti.logindemo.pojo.Menu" extends="BaseResultMap">
        <collection property="roles" ofType="io.chenylnti.logindemo.pojo.Role">
            <id column="rid" property="id"/>
            <result column="name" property="name"/>
            <result column="nameZh" property="nameZh"/>
        </collection>
    </resultMap>
    <select id="getAllMenusWithRole" resultMap="MenuWithRole">
        SELECT
            menu.*,role.id as rid,role.`name`,role.nameZh
        FROM
            menu,menu_role,role
        WHERE
            menu.id=menu_role.mid AND menu_role.rid=role.id
        ORDER BY
            menu.id
    </select>

</mapper>